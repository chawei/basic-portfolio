<% title "News", false %>

<div class="index_container">
  <div class="description">
  </div>

  <div class='index_header without_line'>
    <span class='title'>List of news</span>
    (<%= link_to 'add a new news', new_admin_article_path %>)
    
    <span class="right"><%= will_paginate(@articles)%></span>
  </div>

  <% if @articles.empty? %>
  Please add a new news
  <% else %>
  <table class="index">
    <tr>
      <th>Title</th>
      <th width="100">Date</th>
      <th class="actions">Actions</th>
    </tr>

  <% @articles.each do |article| %>
    <tr class="data">
      <td><%= article.title %></td>
      <td><%= article.date %></td>
      <td class="actions">
        <%= link_to 'View & Edit', [:admin, article] %>
        <%= link_to 'Delete', [:admin, article], :confirm => 'Are you sure?', :method => :delete %>
        <%= link_to (article.hidden? ? 'Publish' : 'Hide'), toggle_published_admin_article_path(article), :method => :post, :remote => true, :class => 'ajax_toggle_published' %>
      </td>
    </tr>
  <% end %>
  </table>
  <% end %>
</div>
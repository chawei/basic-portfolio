<% title "Pages", false %>

<div class="index_container">
  <div class="description">
  </div>

  <div class='index_header'>
    <span class='title'>List of pages</span>
  </div>

  <table class="index">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th></th>
    </tr>

  <% @pages.each do |page| %>
    <tr>
      <td><%= page.title %></td>
      <td><%= truncate(page.content, :length => 50) %></td>
      <td class="actions">
        <%= link_to 'View', [:admin, page] %> |
        <%= link_to 'Edit', edit_admin_page_path(page) %> |
        <%= link_to 'Delete', [:admin, page], :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
<% title "Pages", false %>

<div class="index_container">
  <div class="description">
  </div>

  <div class='index_header without_line'>
    <span class='title'>List of pages</span>
  </div>

  <table class="index">
    <tr>
      <th>Title</th>
      <th class="actions">Actions</th>
    </tr>

  <% @pages.each do |page| %>
    <tr class="data">
      <td><%= page.title %></td>
      <td class="actions">
        <%= link_to 'View & Edit', [:admin, page] %>
        <%= link_to 'Delete', [:admin, page], :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
<% title "Films", false %>

<div class="index_container">
  <div class="description">
  </div>

  <div class='index_header'>
    <span class='title'>List of films</span>
    (<%= link_to 'add a new film', new_admin_film_path %>)
  </div>

  <% if @films.empty? %>
  Please add a new film
  <% else %>
  <table class="index">
    <tr>
      <th>Title</th>
      <th width="100">Year</th>
      <th width="100">Draft</th>
      <th class="actions">Actions</th>
    </tr>

  <% @films.each do |film| %>
    <tr>
      <td><%= film.title %></td>
      <td><%= film.year %></td>
      <td><%= film.draft? ? "Yes" : "No" %></td>
      <td class="actions">
        <%= link_to 'View & Edit', [:admin, film] %>
        <%= link_to 'Delete', [:admin, film], :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
  </table>
  <% end %>
</div>

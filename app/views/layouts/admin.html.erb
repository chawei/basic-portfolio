<!DOCTYPE html>  
<html>  
  <head>  
    <title>Admin Panel <%= h("- #{yield(:title)}") unless yield(:title).blank? %></title>  
  
    <%= stylesheet_link_tag "base" %>  
    <%= stylesheet_link_tag "admin", "tipsy" %>
    
    <%= javascript_include_tag 'jquery', 'jquery-ui', 'jquery.jeditable', 'jquery.tipsy' %>
    <%= javascript_include_tag 'rails' %> 
    <%= javascript_include_tag 'admin' %> 
    
    <script type="text/javascript" charset="utf-8">
      var AUTH_TOKEN = "<%= form_authenticity_token.inspect if protect_against_forgery? %>";
    </script>
    
    <!-- Skin CSS file -->
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/2.8.2r1/build/assets/skins/sam/skin.css">
    <!-- Utility Dependencies -->
    <script src="http://yui.yahooapis.com/2.8.2r1/build/yahoo-dom-event/yahoo-dom-event.js"></script> 
    <script src="http://yui.yahooapis.com/2.8.2r1/build/element/element-min.js"></script> 
    <!-- Needed for Menus, Buttons and Overlays used in the Toolbar -->
    <script src="http://yui.yahooapis.com/2.8.2r1/build/container/container_core-min.js"></script>
    <!-- Source file for Rich Text Editor-->
    <script src="http://yui.yahooapis.com/2.8.2r1/build/editor/simpleeditor-min.js"></script>
    
    <%= csrf_meta_tag %>  
    <%= yield(:head) %>  
  </head>  
  <body>
    <div id="container"> 
      <div id="flash_msgs"> 
        <% flash.each do |name, msg| %>  
          <%= content_tag :div, msg, :id => "flash_#{name}" %>  
        <% end %>
      </div>
      
      <div id="header_wrap">
        <div id="header">
          <div id="logo"><%= link_to "Admin Panel", admin_path %></div>
          <div id="login_box">
            <%- if current_user -%>
            <div id="actions">
              <div class="action_1">
                <%= link_to 'Logout', admin_logout_path %>
              </div>
            </div>
            <div id="greeting">
              Hello <span class="name"><%= current_user.username %></span>
            </div>
            <%- end -%>
          </div> <!-- END login_box -->
        </div> <!-- END header -->
      </div>

      <div id="navigation_wrap" class="clear">
        <div id="navigation">
          <%= render_navigation if current_user %>
        </div>
      </div>
      
      <div id="main_wrap">
        <div id="main">
          <%- if show_title? -%>
          <div id="headtitle"><%=h yield(:title) %></div>
          <%- end -%>
          
          <%= yield %> 
        </div>
      </div>
      
      <div id="footer_wrap">
        <div id="footer">
          Â© copyright dearstudio
        </div>
      </div>
    </div>
    <%= yield(:foot) %>
  </body>  
</html>
<!DOCTYPE html>  
<html>  
  <head>  
    <title><%= h(yield(:title) || "Portfolio") %></title>  
  
    <%= stylesheet_link_tag "base" %>  
    <%= stylesheet_link_tag "admin" %>  
  
    <%= javascript_include_tag :defaults %>  
    <%= csrf_meta_tag %>  
    <%= yield(:head) %>  
  </head>  
  <body>
    <div id="container"> 
      <div id="flash_msgs"> 
        <% flash.each do |name, msg| %>  
          <%= content_tag :div, msg, :id => "flash_#{name}" %>  
        <% end %>
      </div>
      
      <div id="header_wrap">
        <div id="header">
          <div id="logo">Logo</div>
          <div id="login_box">
            <%- if current_user -%>
            <div id="actions">
              <div class="action_1">
                <%= link_to 'Logout', admin_logout_path %>
              </div>
            </div>
            <div id="greeting">
              Hello <span id="name"><%= current_user.username %></span>
            </div>
            <%- end -%>
          </div> <!-- END login_box -->
        </div> <!-- END header -->
      </div>

      <div id="navigation_wrap" class="clear">
        <div id="navigation">
          <%= render_navigation %>
        </div>
      </div>
      
      <div id="main_wrap">
        <div id="main">
          <%- if show_title? -%>
          <div id="headtitle"><%=h yield(:title) %></div>
          <%- end -%>
          
          <%= yield %> 
        </div>
      </div>
    </div>
    <%= yield(:foot) %>
  </body>  
</html>